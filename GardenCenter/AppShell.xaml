<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="GardenCenter.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:GardenCenter"
    xmlns:views="clr-namespace:GardenCenter.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="GardenCenter">

    <ShellContent Shell.NavBarIsVisible="false" Title="Login" ContentTemplate="{DataTemplate views:LoginPage}" Route="LoginPage" />
    <ShellContent Shell.NavBarIsVisible="false" Title="Home" ContentTemplate="{DataTemplate views:HomePage}" Route="HomePage" />
   
    <ShellContent Shell.NavBarIsVisible="false" Title="SignUp" ContentTemplate="{DataTemplate views:SignUp}" Route="SignUp" />
    <!--<ShellContent Title="Products" ContentTemplate="{DataTemplate views:ProductsPage}" Route="ProductsPage" />-->

</Shell>
